<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type='com.ufpor.app.client.Designertest.MyStyle'>
	.eastPanel {
		background-color: #F60;
		height: 100%;
	}
	
	.westPanel {
		background-color: #EEE;
	}
	
	.northPanel {
		background-color: #39F;
	}
	
	.southPanel {
		background-color: #99C;
	}
	
	.centerPanel {
		background-color: #FFC;
		width: 100%;
		height: 100%;
	}
	
	.envPanel {
		background-color: #FFC;
		height: 100%;
	}
	
	.header {
		background-color: #FFC;
		float: left;
		height: 400px;
		width: 90%;
	}
	
	.header2 {
		background-color: #FFC;
		float: left;
		height: 50px;
		width: 90%;
	}
	
	.treeNode {
		background-color: #99C;
		float: left;
		height: 400px;
		width: 100px;;
	}
	
	.environments {
		background-color: #39F;
		float: left;
		width: 95%;
		height: 550px;
	}
	
	.loginDiv {
		background-color: #99C;
		float: right;
		height: 100%;
		width: 200px;
		padding-top: 20px;
		background-color: #39F;
	}
	</ui:style>

	<g:SplitLayoutPanel ui:field="mainPanel">
		<g:north size='100'>
			<g:HTMLPanel styleName="{style.northPanel}" ui:field="tabPanel1">

				<div class='{style.loginDiv}'>
					<g:Label ui:field="greeting">
						Hello Ehsan
					</g:Label>

					<g:Anchor ui:field="signOut">
						Sign Out
					</g:Anchor>

				</div>


			</g:HTMLPanel>
		</g:north>
		<g:center width="100%" height="100%">
			<g:HTMLPanel width="100%" height="100%" ui:field="center">
				<!-- <g:ScrollPanel styleName="{style.centerPanel}" ui:field="treeContainer"> 
					</g:ScrollPanel> -->
			</g:HTMLPanel>
		</g:center>
		<g:east size='300' height="100%">

			<g:DecoratedTabPanel width="100%" height="100%"
				ui:field="eastPanel">
				<g:Tab text="Environment" height="100%">
					<g:HTMLPanel width="100%" height="100%">
						<div class='{style.envPanel}'>
							<div class='{style.header2}'>
								<g:Button text="Add New" ui:field="button" />
							</div>

							<g:ScrollPanel styleName="{style.environments}">
								<g:HTMLPanel ui:field="envContainer">


								</g:HTMLPanel>
							</g:ScrollPanel>

						</div>
					</g:HTMLPanel>
				</g:Tab>
				<g:Tab text="People">
					<g:FlowPanel styleName="{style.centerPanel}">
						<g:Label>This is the second panel</g:Label>
					</g:FlowPanel>
				</g:Tab>
				<g:Tab text="Activity">
					<g:FlowPanel styleName="{style.centerPanel}">
						<g:Label>This is the third panel</g:Label>
					</g:FlowPanel>
				</g:Tab>

			</g:DecoratedTabPanel>

		</g:east>
		<g:south size="150">
			<g:FlowPanel styleName="{style.southPanel}">
				<g:Label>This is the SOUTH panel</g:Label>
			</g:FlowPanel>
		</g:south>
	</g:SplitLayoutPanel>


</ui:UiBinder> 