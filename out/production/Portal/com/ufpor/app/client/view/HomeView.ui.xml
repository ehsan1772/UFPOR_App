<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style type='com.ufpor.app.client.view.HomeView.MyStyle'>
        .eastPanel {
            background-color: #F60;
            height: 100%;
        }

        .westPanel {
            background-color: #EEE;
        }

        .northPanel {
            background-color: #D4DCDF;
            position:relative
        }

        .southPanel {
            background-color: #99C;
        }

        .centerPanel {
            background-color: #F3F2EE;
            width: 100%;
            height: 100%;
        }

        .envPanel {
            background-color: #FFC;
            height: 100%;
        }

        .header {
            background-color: #FFC;
            float: left;
            height: 400px;
            width: 90%;
        }

        .header2 {
            background-color: #FFC;
            float: left;
            height: 50px;
            width: 90%;
        }

        .treeNode {
            background-color: #99C;
            float: left;
            height: 400px;
            width: 100px;;
        }

        .environments {
            background-color: #39F;
            float: left;
            width: 95%;
            height: 550px;
        }

        .loginDiv {
            background-color: #D4DCDF;
            float: right;
            height: 100%;
            width: 200px;
            padding-top: 20px;
        }

        .test {
            font-family: 'Questrial', sans-serif;
            background-color: #D56031;
            color: white;
            padding: 5px 10px;
            border-radius: 5px;

        }

        .app-Button1 {
            margin: 0px 10px;
            padding: 5px 7px;
            text-decoration: none;
            cursor: pointer;
            cursor: hand;
            border: 0px;
            font-size: small;
            color: white;
            font-family: 'Questrial', sans-serif;
            background: #31A3D8;
            border-radius: 5px;

        }

        .menu {
            width: 100%;
            height: 30px;
            position:absolute;
            bottom:0px;
        }


    </ui:style>

    <g:SplitLayoutPanel ui:field="mainPanel">
        <g:north size='100'>
            <g:HTMLPanel styleName="{style.northPanel}" ui:field="tabPanel1">

                <div class='{style.loginDiv}'>
                    <g:Label ui:field="greeting"/>

                    <div style="margin-top: 10px; float: left;">
                        <g:Anchor styleName="{style.test}" ui:field="signOut">
                            Sign Out
                        </g:Anchor>
                    </div>

                    <div style="margin-top: 5px; float: left;">
                        <g:Button styleName="{style.app-Button1}">
                            Share
                        </g:Button>
                    </div>

                </div>

                <div style=" width: 100%; height: 30px; position:absolute; bottom:30px; " id="m-container">

                </div>


            </g:HTMLPanel>

        </g:north>
        <g:center width="100%" height="100%">
            <g:HTMLPanel width="100%" height="100%" ui:field="center">
                <!-- <g:ScrollPanel styleName="{style.centerPanel}" ui:field="treeContainer">
                    </g:ScrollPanel> -->
            </g:HTMLPanel>
        </g:center>
        <g:east size='300' height="100%">

            <g:DecoratedTabPanel width="100%" height="100%"
                                 ui:field="eastPanel">
                <g:Tab text="Environment" height="100%">
                    <g:HTMLPanel width="100%" height="100%">
                        <div class='{style.envPanel}'>
                            <div class='{style.header2}'>
                                <g:Button text="Add New" ui:field="button"/>
                            </div>

                            <g:ScrollPanel styleName="{style.environments}">
                                <g:HTMLPanel ui:field="envContainer">


                                </g:HTMLPanel>
                            </g:ScrollPanel>

                        </div>
                    </g:HTMLPanel>
                </g:Tab>
                <g:Tab text="People">
                    <g:FlowPanel styleName="{style.centerPanel}">
                        <g:Label>This is the second panel</g:Label>
                    </g:FlowPanel>
                </g:Tab>
                <g:Tab text="Activity">
                    <g:FlowPanel styleName="{style.centerPanel}">
                        <g:Label>This is the third panel</g:Label>
                    </g:FlowPanel>
                </g:Tab>

            </g:DecoratedTabPanel>

        </g:east>
        <g:south size="150">
            <!--
            <g:FlowPanel styleName="{style.southPanel}">
                <g:Label ui:field="southLabel">This is the SOUTH panel</g:Label>
            </g:FlowPanel>
            -->
            <g:HTMLPanel width="100%" height="100%" ui:field="south">
                <!-- <g:ScrollPanel styleName="{style.centerPanel}" ui:field="treeContainer">
                    </g:ScrollPanel> -->
            </g:HTMLPanel>
        </g:south>
    </g:SplitLayoutPanel>

</ui:UiBinder>