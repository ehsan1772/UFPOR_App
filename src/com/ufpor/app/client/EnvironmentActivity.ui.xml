<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:custom="urn:import:com.designer.gwt.client">
	<ui:style>
	.main {
		width: 100%;
		height: 100%;
	}
	
	.leftPanel,.rightPanel {
		width: 48%;
		height: 90%;
		float: left;
		padding: 1%;
	}
	
	.leftPanel {
		
	}
	
	.rightPanel {
		width: 33%;
		padding-left: 5%;
	}
	
	.labelContainer {
		height: 10%;
		width: 40%;
		margin-bottom: 3px;
	}
	
	.doubleContainer {
		height: 90%;
		width: 100%;
	}
	
	.label {
		float: left;
		position: relative;
		top: 50%;
		transform: translateY(-50%);
	}
	
	.doubleContainer2 {
		position: relative;
		height: 90%;
		width: 100%;
	}
	
	.peopleList {
		background-color: #F5F5F5;
		position: absolute;
		top: 5px;
		bottom: 5px;
		width: 35%;
	}
	</ui:style>
	<g:HTMLPanel ui:field="root">
		<div class='{style.main}'>
			<div class='{style.leftPanel}'>
				<div class='{style.labelContainer}'>
					<g:Label addStyleNames='{style.label}' text="Parents"
						ui:field="firstTitle" />
				</div>
				<div class='{style.doubleContainer}'>
					<custom:DoubleTable ui:field="parents" />
				</div>
			</div>
			<div class='{style.rightPanel}'>
				<div class='{style.labelContainer}'>
					<g:Label addStyleNames='{style.label}' text="Children"
						ui:field="secondTitle" />
				</div>
				<div class='{style.doubleContainer2}'>
					<g:ListBox styleName='{style.peopleList}'
						visibleItemCount="6" ui:field="sourceList" />
				</div>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 