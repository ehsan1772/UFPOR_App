<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:custom="urn:import:com.ufpor.app.client"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	<ui:style>
	.main {
		width: 100%;
		height: 100%;
	}
	
	.leftPanel,.rightPanel {
		width: 48%;
		height: 90%;
		float: left;
		padding: 1%;
	}
	
	.leftPanel {
		
	}
	
	.rightPanel {
		width: 33%;
		padding-left: 5%;
	}
	
	.labelContainer {
		height: 10%;
		width: 40%;
		margin-bottom: 3px;
	}
	
	.quantityContainer {
		height: 90%;
		width: 100%;
	}
	
	.quantityHContainer {
		height: 10%;
		width: 100%;
		background-color: #EAAC47;
	}
	
	.quantityBContainer {
		height: 90%;
		width: 100%;
		background-color: #4785EA;
	}
	
	.label {
		float: left;
		position: relative;
		top: 50%;
		transform: translateY(-50%);
	}
	
	.cell {
		padding: 1%;
	}
	
	reqCell, td.reqCell {
    padding: 1%;
}
	
	.qualityContainer {
		position: relative;
		height: 90%;
		width: 100%;
	}
	
	.CHeader {
		background-color: #BAC6D9;
	}
	</ui:style>
	<g:HTMLPanel ui:field="root">
		<div class='{style.main}'>
			<div class='{style.leftPanel}'>
				<div class='{style.labelContainer}'>
					<g:Label addStyleNames='{style.label}' text="Parents"
						ui:field="firstTitle" />
				</div>
				<div class='{style.quantityContainer}'>
					<g:Grid>
						<g:row styleName="CHeader">
							<g:customCell>
								<g:Label>One</g:Label>
							</g:customCell>
							<g:customCell>
								<g:Label>Two</g:Label>
							</g:customCell>
							<g:customCell>
								<g:Label>Three</g:Label>
							</g:customCell>
							<g:customCell>
								<g:Label>Four</g:Label>
							</g:customCell>
						</g:row>
						<g:row>
							<g:cell>
								<div>foo</div>
							</g:cell>
							<g:cell>
								<div>bar</div>
							</g:cell>
						</g:row>
					</g:Grid>
				</div>
			</div>
			<div class='{style.rightPanel}'>
				<div class='{style.labelContainer}'>
					<g:Label addStyleNames='{style.label}' text="Children"
						ui:field="secondTitle" />
				</div>
				<div class='{style.qualityContainer}'>
					<c:CellTable ui:field="table" />
				</div>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 