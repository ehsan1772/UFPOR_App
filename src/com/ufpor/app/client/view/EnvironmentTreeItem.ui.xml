<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}
	
	.main {
		width: 200px;
		height: 100px;
		border: 1px solid black;
		margin: 5px;
		background-color: #E6E687;
		transition: width .1s
	}
	
	.main:hover {
		width: 205px;
	}
	
	.left {
		width: 60%;
		height: 100%;
		float: left;
	}
	
	.right {
		width: 40%;
		height: 100%;
		float: left;
		background-color: #EBEBD5;
	}
	
	.envName {
		margin-left: 10px;
		margin-top: 45px;
		font-size: 15px;
		color: #36362C;
		font-weight: bold;
	}
	
	.envArea {
		margin-left: 5px;
		margin-top: 45px;
		font-size: 15px;
		font-style: italic;
		color: gray;
	}
	</ui:style>
	<g:FocusPanel ui:field="panel">
		<g:HTMLPanel>
			<div class='{style.main}'>
				<div class='{style.left}'>
					<g:Label styleName='{style.envName}' ui:field="name"> Space 1
					</g:Label>
				</div>

				<div class='{style.right}'>
					<g:Label styleName='{style.envArea}' ui:field="area"> 1200 sqft
					</g:Label>
				</div>


			</div>
		</g:HTMLPanel>
	</g:FocusPanel>
</ui:UiBinder> 